# AWS values
export AWS_REGION=us-east-2
export EKS_CLUSTER_NAME=my-cluster
export EKS_CLUSTER_ROLE_ARN=arn:aws:iam::012345678901:role/cluster-name-role

# external image repo (e.g. DockerHub) values
export REPOSITORY=user/build-service # Assuming DockerHub account
export REGISTRY_USERNAME=username
export REGISTRY_PASSWORD=password

# TAP values
export TANZU_NET_USER=user@somewhere.com
export TANZU_NET_PASSWORD=password
export DB_PASSWORD=persistent-password # Must be the same between deploys to the same cluster
